{
	"compilerOptions": {
		"outDir": "dist",
		"module": "esnext",
		"target": "es6",
		"lib": [
			"es5",
			"es6",
			"es7",
			"es2017",
			"dom"
		],
		"sourceMap": true,
		"jsx": "react",
		"moduleResolution": "node",
		"declarationDir": "dist",
		"rootDir": "src",
		"baseUrl": "src",
		"noImplicitAny": false,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"scripts",
		"src/**/*.test.ts"
	]
}
